<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextView.TableInfo" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.ListItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.Marks" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.Subjects" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.StudentInfo" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.StudentInfo.Info" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextView.StudentInfo.Headers" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Spinner">
        <item name="android:state_multiline">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CollapsedAppBar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedAppBar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft"> 4dp </item>
        <item name="android:paddingLeft"> 0dp </item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
