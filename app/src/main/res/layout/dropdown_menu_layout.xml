<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner"
        style="@style/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:spinnerMode="dialog"
        app:ms_alignLabels="true"
        app:ms_arrowColor="@color/colorPrimary"
        app:ms_enableFloatingLabel="true"
        app:ms_floatingLabelColor="@color/colorPrimary"
        app:ms_floatingLabelText="Факультет"
        app:ms_hint="Факультет"
        app:ms_multiline="true" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner2"
        style="@style/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:ms_arrowColor="@color/colorPrimary"
        app:ms_enableFloatingLabel="true"
        app:ms_floatingLabelColor="@color/colorPrimary"
        app:ms_floatingLabelText="Специальность"
        app:ms_hint="Специальность" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner3"
        style="@style/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:ms_arrowColor="@color/colorPrimary"
        app:ms_enableFloatingLabel="true"
        app:ms_floatingLabelColor="@color/colorPrimary"
        app:ms_floatingLabelText="Финансирование"
        app:ms_hint="Финансирование" />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner4"
        style="@style/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        app:ms_arrowColor="@color/colorPrimary"
        app:ms_enableFloatingLabel="true"
        app:ms_floatingLabelColor="@color/colorPrimary"
        app:ms_floatingLabelText="Форма обучения"
        app:ms_hint="Форма обучения"
        app:ms_multiline="true" />
    <TextView
        android:id="@+id/places_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/size_div_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lastmod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/places_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/size_div_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:visibility="gone" />


    <Button
        android:id="@+id/clear_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Сбросить"
        android:visibility="gone" />

</LinearLayout>